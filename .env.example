# Google Gemini API Key (required)
GOOGLE_API_KEY=your_google_api_key_here

# Gemini Model Configuration
GEMINI_MODEL=gemini-2.0-flash

# API Security
# This key is required in the x-api-key header for all requests
API_SECRET_KEY=your_api_secret_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Configuration (comma-separated origins, * for all)
CORS_ORIGINS=*

# Mock Scammer API Configuration
MOCK_SCAMMER_ENABLED=true
MOCK_SCAMMER_PORT=8001

# Agent Configuration
MAX_ENGAGEMENT_TURNS=5
SCAM_DETECTION_THRESHOLD=0.6
MAX_MESSAGE_LENGTH=10000

# API Timeouts
GEMINI_TIMEOUT_SECONDS=30
API_RETRY_ATTEMPTS=3

# Zep Context AI Memory (optional - for persistent memory)
# Get your API key from https://app.getzep.com
ZEP_API_KEY=your_zep_api_key_here
ZEP_ENABLED=true

# Logging
LOG_LEVEL=INFO
