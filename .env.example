# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# API Security
# This key is required in the x-api-key header for all requests
API_SECRET_KEY=your_api_secret_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# API Configuration
API_URL=http://localhost:8000

# CORS Configuration (comma-separated origins, * for all)
CORS_ORIGINS=*

# Mock Scammer API Configuration
MOCK_SCAMMER_ENABLED=true
MOCK_SCAMMER_PORT=8001

# Agent Configuration
MAX_ENGAGEMENT_TURNS=8
SCAM_DETECTION_THRESHOLD=0.6
MAX_MESSAGE_LENGTH=10000

# API Timeouts
OPENAI_TIMEOUT_SECONDS=30
API_RETRY_ATTEMPTS=3

# Logging
LOG_LEVEL=INFO

# LangSmith Observability
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT="https://api.smith.langchain.com"
LANGCHAIN_PROJECT="Agentic Honey-Pot"
LANGCHAIN_API_KEY=your_langchain_api_key_here

# Neon PostgreSQL Memory
DATABASE_URL=postgres://user:password@ep-xyz.neon.tech/neondb
POSTGRES_ENABLED=true
